{
  "name": "krishi-mitra",
  "version": "1.0.0",
  "description": "Agricultural Support Platform for Indian Farmers",
  "main": "index.js",
  "scripts": {
    "start": "./scripts/start_all_services.sh",
    "stop": "./scripts/stop_all_services.sh",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend/main && npm run dev",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend/main && npm install && cd ../auth && npm install && cd ../ml-features && pip install -r requirements.txt",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend/main && npm test",
    "test:frontend": "cd frontend && npm test",
    "build": "cd frontend && npm run build",
    "deploy": "npm run build && npm run start:prod",
    "start:prod": "NODE_ENV=production ./scripts/start_all_services.sh"
  },
  "keywords": [
    "agriculture",
    "farming",
    "india",
    "mern",
    "ai",
    "ml",
    "marketplace",
    "consultation"
  ],
  "author": "Darshan Patil",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Darshan1814/Krishi-Mitra.git"
  },
  "bugs": {
    "url": "https://github.com/Darshan1814/Krishi-Mitra/issues"
  },
  "homepage": "https://github.com/Darshan1814/Krishi-Mitra#readme",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}